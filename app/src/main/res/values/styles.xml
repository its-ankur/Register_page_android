<!-- res/values/styles.xml -->
<resources>

    <!-- In res/values/styles.xml -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/toolbar_color</item>
        <item name="colorPrimaryDark">@color/toolbar_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Custom DatePickerDialog theme -->
    <style name="YellowDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize the dialog accent color -->
        <item name="colorAccent">@color/yellow</item>
        <!-- Customize the button text color -->
        <item name="android:buttonBarButtonStyle">@style/YellowButtonStyle</item>
    </style>

    <!-- Custom Button Style for DatePickerDialog -->
    <style name="YellowButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
